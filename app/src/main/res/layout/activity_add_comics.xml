<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/comic_image_view"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@color/white"
        android:scaleType="centerCrop"
        ></ImageView>
    <EditText
        android:id="@+id/insert_title_editText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24dp"
        android:hint="Title of comics"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/insert_details_editText"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:hint="Details of comics"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choose the image"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_red"
        />
    <Button
        android:id="@+id/upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload the comics"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/dark_red"
        />
</LinearLayout>