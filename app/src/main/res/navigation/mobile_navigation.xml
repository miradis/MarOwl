<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.marowl.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.marowl.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.marowl.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.marowl.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_navigation_account_to_signInActivity"
            app:destination="@id/signInActivity" />
        <action
            android:id="@+id/action_navigation_account_to_addComicActivity"
            app:destination="@id/addComicActivity" />
        <action
            android:id="@+id/action_navigation_account_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <activity
        android:id="@+id/signInActivity"
        android:name="com.example.marowl.ui.authentication.SignInActivity"
        android:label="SignInActivity"
        tools:layout="@layout/activity_login"/>
    <activity
        android:id="@+id/signUpActivity"
        android:name="com.example.marowl.ui.authentication.SignUpActivity"
        android:label="SignUpActivity"
        tools:layout="@layout/activity_register"/>
    <activity
        android:id="@+id/addComicActivity"
        android:name="com.example.marowl.ui.comic.AddComicActivity"
        android:label="AddComicActivity"
        tools:layout="@layout/activity_add_comics"/>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.marowl.ui.authentication.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/activity_login"/>
</navigation>